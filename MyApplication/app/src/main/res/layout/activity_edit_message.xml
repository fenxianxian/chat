<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<!--    编辑个人信息页  ，实现中。。。。 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#A9000000"
        android:textSize="14dp"
        android:text="请输入生日" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="+"
                android:id="@+id/btn_up1" />
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#B2000000"
                android:textSize="15dp"
                android:text="2000"/>
            <Button android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="-"
                android:id="@+id/btn_down1" />
        </LinearLayout>
        <LinearLayout android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="+"
                android:id="@+id/btn_up2" />
            <TextView
                android:id="@+id/month"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#B2000000"
                android:textSize="15dp"
                android:gravity="center"
                android:text="1"/>
            <Button android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="-"
                android:id="@+id/btn_down2" />
        </LinearLayout>
        <LinearLayout android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="+"
                android:id="@+id/btn_up3" />
            <TextView
                android:id="@+id/day"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#B2000000"
                android:textSize="15dp"
                android:gravity="center"
                android:text="1"/>
            <Button android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="-"
                android:id="@+id/btn_down3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>