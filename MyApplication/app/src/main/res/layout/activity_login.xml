    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:text="去注册>>"
        android:textColor="#812B0505"
        android:id="@+id/btn_reg"
        android:layout_marginTop="10dp"/>
    </LinearLayout>

