<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#B2000000"
        android:textSize="28dp"
        android:text="用 户 登 录"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp" />
<!--    layout_gravity属性的作用是控制控件在界面中的位置   gravity属性的作用是控制控件中内容的位置-->
<!--    margin是外边距,即盒子与盒子之间的距离,而padding是内边距,是盒子的边与盒子内部元素的距离-->
    <LinearLayout android:layout_width="280dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#142B0505"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:id="@+id/username"
            android:hint="账号"
            android:textSize="14dp"
            android:paddingLeft="10dp"/>
<!--        android:background="@android:color/transparent"去掉下划线-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kb"
            android:layout_gravity="center"
            android:paddingRight="5dp"
            android:id="@+id/kb_photo"/>
    </LinearLayout>

    <LinearLayout android:layout_width="280dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#142B0505"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">
        <EditText
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:id="@+id/password"
            android:background="@android:color/transparent"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="14dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/kb"
            android:layout_gravity="center"
            android:id="@+id/kb_photo1"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/close_eys"
            android:layout_gravity="center"
            android:id="@+id/eyes"/>
    </LinearLayout>

    <LinearLayout android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
<!--        android:checked="true"-->
        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="18dp"
            android:textColor="#812B0505"
            android:scaleX="0.7"
            android:scaleY="0.7"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="忘记密码"
            android:textColor="#812B0505"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:id="@+id/forget_password"
            />
    </LinearLayout>

    <Button android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:id="@+id/btn_login"
        android:layout_marginTop="10dp"
       />
<!--     android:backgroundTint="@color/colorPrimary  ffffff  btn_login.setBackground(getDrawable(R.mipmap.a));-->

    <LinearLayout android:layout_width="280dp"
        android:layout_height="wrap_content"
